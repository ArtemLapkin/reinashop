              .col-md-4.col-sm-6.col-xs-12
                figure
                  img(src="img/model-4.jpg")
                  figcaption Костюм - <strong>440 грн</strong>

              .col-md-4.col-sm-6.col-xs-12
                figure
                  img(src="img/model-5.jpg")
                  figcaption Платье - <strong>490 грн</strong>

              .col-md-4.col-sm-6.col-xs-12
                figure
                  img(src="img/model-6.jpg")
                  figcaption Платье - <strong>375 грн</strong>

    footer
      .container
        .footer-stuff
          .text-center
            img(src="img/logo.png").logo-img
            h4 Королевой быть просто
          .social-links.text-center
            a(href='https://vk.com/id352511043' target='_blank')
              img.social-img(src='img/soc-vk.png')
            a(href='https://www.instagram.com/_reina_shop_/' target='_blank')
              img.social-img(src='img/soc-inst.png')
            a(href='https://www.facebook.com/profile.php?id=100013830461857' target='_blank')
              img.social-img(src='img/soc-fb.png')

  script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js")
